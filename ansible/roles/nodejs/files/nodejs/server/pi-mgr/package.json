{
  "name": "pi-mgr",
  "version": "1.0.0",
  "description": "Backend for pi-mgr application",
  "main": "index.js",
  "license": "MIT",
  "eslint.packageManager": "yarn",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "express": "^4.16.3",
    "flow-typed": "^2.5.1",
    "moment": "^2.22.2",
    "ramda": "^0.25.0",
    "sqlite3": "^4.0.2",
    "supertest": "^3.3.0"
  },
  "scripts": {
    "test": "jest --runInBand --coverage --verbose ",
    "start": "yarn run prepublish && nodejs -r dotenv/config lib/index.js dotenv_config_path=./config/production.env",
    "compile": "babel --presents es2015 -d lib/ src/",
    "prepublish": "yarn run compile",
    "stop": "pkill --signal SIGINT myApp"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/*.js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/config/jest.setup-file.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.80.0",
    "jest": "^23.5.0"
  }
}
